<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.asnk.fdcentral.ui.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/splash_to_foods"
            app:popUpTo="@id/splash"
            app:destination="@id/foodsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/foodsFragment"
        android:name="com.asnk.fdcentral.ui.foods.FoodsFragment"
        android:label="@string/label_foods">

        <action
            android:id="@+id/food_to_details"
            app:destination="@id/foodDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/foodDetailsFragment"
        android:name="com.asnk.fdcentral.ui.foods.FoodDetailFragment"
        android:label="@string/app_name" />

</navigation>

